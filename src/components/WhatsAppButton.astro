---
import { WHATSAPP_NUMBER } from '../consts';

type Props = {
  productName: string;
  sku: string;
};

const { productName, sku }: Props = Astro.props;
const message = encodeURIComponent(`Hi, I'm interested in ${productName} (Ref: ${sku}).`);
const whatsappUrl = `https://wa.me/${WHATSAPP_NUMBER}?text=${message}`;
---

<a
  href={whatsappUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-block bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition-colors"
>
  Consultar por WhatsApp
</a>
---
// ShareButton component to copy the current page URL
---

<button
  id="share-button"
  class="inline-block bg-[#4B5E45] hover:text-med-terracotta text-white font-bold py-2 px-4 rounded transition-colors"
  onclick="copyToClipboard()"
>
  Compartir enlace
</button>

<script is:inline>
  const copyToClipboard = function () {
    navigator.clipboard.writeText(window.location.href).then(() => {
      // Optional: Show a brief feedback, but keeping it simple
      alert('Enlace copiado al portapapeles');
    }).catch(err => {
      console.error('Error al copiar: ', err);
    });
}
</script>
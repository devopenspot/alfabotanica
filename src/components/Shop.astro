---
import { translations } from '../translations';
import { Image } from 'astro:assets';
import rosemaryImage from '../assets/rosemary.png';
import chamomileImage from '../assets/chamomile.png';
import creamImage from '../assets/cream.jpg';
import solarScreenImage from '../assets/solar-screen.jpg';
---

<section id="shop" class="container mx-auto px-4 sm:px-6 py-16 sm:py-20 lg:py-24">
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-end mb-12 sm:mb-16">
        <div class="max-w-xl">
            <h2 class="text-3xl sm:text-4xl lg:text-5xl mb-2 sm:mb-3" data-lang-target="openingCollection">{translations.es.openingCollection}</h2>
            <p class="text-stone-500 italic text-sm sm:text-base leading-relaxed" data-lang-target="collectionSubtitle">{translations.es.collectionSubtitle}</p>
        </div>
        <div class="mt-4 lg:mt-0 uppercase text-xs tracking-tighter border-b border-stone-800 pb-1" data-lang-target="productsAvailable">
            {translations.es.productsAvailable}
        </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-10 lg:gap-12">

        <article class="group cursor-pointer">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-4 sm:mb-6 relative rounded-sm">
                <Image src={rosemaryImage}

				alt="Rosemary extract" 
				class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-3 sm:bottom-4 left-3 sm:left-4 right-3 sm:right-4 bg-white/90 py-2 sm:py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity rounded">Quick Add — $24</button>
            </div>
            <h3 class="text-lg sm:text-xl mb-1 leading-tight" data-lang-target="rosemaryTonicTitle">{translations.es.rosemaryTonicTitle}</h3>
            <p class="text-stone-500 text-xs sm:text-sm mb-4 leading-relaxed" data-lang-target="rosemaryTonicDesc">{translations.es.rosemaryTonicDesc}</p>
        </article>

        <article class="group cursor-pointer">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-4 sm:mb-6 relative rounded-sm">
                <Image src={chamomileImage} 
				alt="Chamomile extract"
                class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-3 sm:bottom-4 left-3 sm:left-4 right-3 sm:right-4 bg-white/90 py-2 sm:py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity rounded">Quick Add — $32</button>
            </div>
            <h3 class="text-lg sm:text-xl mb-1 leading-tight" data-lang-target="chamomileTonicTitle">{translations.es.chamomileTonicTitle}</h3>
            <p class="text-stone-500 text-xs sm:text-sm mb-4 leading-relaxed" data-lang-target="chamomileTonicDesc">{translations.es.chamomileTonicDesc}</p>
        </article>

        <article class="group cursor-pointer">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-4 sm:mb-6 relative rounded-sm">
                <Image src={creamImage} alt="Painkiller Cream" class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-3 sm:bottom-4 left-3 sm:left-4 right-3 sm:right-4 bg-white/90 py-2 sm:py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity rounded">Quick Add — $28</button>
            </div>
            <h3 class="text-lg sm:text-xl mb-1 leading-tight" data-lang-target="painkillerCreamTitle">{translations.es.painkillerCreamTitle}</h3>
            <p class="text-stone-500 text-xs sm:text-sm mb-4 leading-relaxed" data-lang-target="painkillerCreamDesc">{translations.es.painkillerCreamDesc}</p>
        </article>

        <article class="group cursor-pointer">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-4 sm:mb-6 relative rounded-sm">
                <Image src={solarScreenImage} alt="Solar Screen" class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-3 sm:bottom-4 left-3 sm:left-4 right-3 sm:right-4 bg-white/90 py-2 sm:py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity rounded">Quick Add — $35</button>
            </div>
            <h3 class="text-lg sm:text-xl mb-1 leading-tight" data-lang-target="solarScreenTitle">{translations.es.solarScreenTitle}</h3>
            <p class="text-stone-500 text-xs sm:text-sm mb-4 leading-relaxed" data-lang-target="solarScreenDesc">{translations.es.solarScreenDesc}</p>
        </article>

    </div>
</section>
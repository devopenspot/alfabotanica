---
import { translations } from '../translations';
---

<section id="shop" class="container mx-auto px-6 py-24">
    <div class="flex flex-col md:flex-row justify-between items-end mb-16">
        <div>
            <h2 class="text-4xl mb-2" data-lang-target="openingCollection">{translations.es.openingCollection}</h2>
            <p class="text-stone-500 italic" data-lang-target="collectionSubtitle">{translations.es.collectionSubtitle}</p>
        </div>
        <div class="mt-4 md:mt-0 uppercase text-xs tracking-tighter border-b border-stone-800" data-lang-target="productsAvailable">
            {translations.es.productsAvailable}
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">

        <article class="group cursor-pointer">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-6 relative">
                <img src="https://images.unsplash.com/photo-1611080626919-7cf5a9dbab5b?auto=format&fit=crop&q=80" alt="Rosemary Oil" class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-4 left-4 right-4 bg-white/90 py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">Quick Add — $24</button>
            </div>
            <h3 class="text-xl mb-1" data-lang-target="rosemaryTitle">{translations.es.rosemaryTitle}</h3>
            <p class="text-stone-500 text-sm mb-4" data-lang-target="rosemaryDesc">{translations.es.rosemaryDesc}</p>
        </article>

        <article class="group cursor-pointer">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-6 relative">
                <img src="https://images.unsplash.com/photo-1596434455589-94303e230303?auto=format&fit=crop&q=80" alt="Chamomile Mist" class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-4 left-4 right-4 bg-white/90 py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">Quick Add — $32</button>
            </div>
            <h3 class="text-xl mb-1" data-lang-target="chamomileTitle">{translations.es.chamomileTitle}</h3>
            <p class="text-stone-500 text-sm mb-4" data-lang-target="chamomileDesc">{translations.es.chamomileDesc}</p>
        </article>

        <article class="group cursor-pointer">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-6 relative">
                <img src="https://images.unsplash.com/photo-1608571423902-eed4a5ad8108?auto=format&fit=crop&q=80" alt="Botanic Balm" class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-4 left-4 right-4 bg-white/90 py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">Quick Add — $18</button>
            </div>
            <h3 class="text-xl mb-1" data-lang-target="balmTitle">{translations.es.balmTitle}</h3>
            <p class="text-stone-500 text-sm mb-4" data-lang-target="balmDesc">{translations.es.balmDesc}</p>
        </article>

    </div>
</section>
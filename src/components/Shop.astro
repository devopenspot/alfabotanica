---
import { translations } from '../translations';
---

<section id="shop" class="container mx-auto px-4 sm:px-6 py-16 sm:py-20 lg:py-24">
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-end mb-12 sm:mb-16">
        <div class="max-w-xl">
            <h2 class="text-3xl sm:text-4xl lg:text-5xl mb-2 sm:mb-3" data-lang-target="openingCollection">{translations.es.openingCollection}</h2>
            <p class="text-stone-500 italic text-sm sm:text-base leading-relaxed" data-lang-target="collectionSubtitle">{translations.es.collectionSubtitle}</p>
        </div>
        <div class="mt-4 lg:mt-0 uppercase text-xs tracking-tighter border-b border-stone-800 pb-1" data-lang-target="productsAvailable">
            {translations.es.productsAvailable}
        </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-10 lg:gap-12">

        <article class="group cursor-pointer">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-4 sm:mb-6 relative rounded-sm">
                <img src="https://images.unsplash.com/photo-1611080626919-7cf5a9dbab5b?auto=format&fit=crop&q=80" alt="Rosemary Oil" class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-3 sm:bottom-4 left-3 sm:left-4 right-3 sm:right-4 bg-white/90 py-2 sm:py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity rounded">Quick Add — $24</button>
            </div>
            <h3 class="text-lg sm:text-xl mb-1 leading-tight" data-lang-target="rosemaryTitle">{translations.es.rosemaryTitle}</h3>
            <p class="text-stone-500 text-xs sm:text-sm mb-4 leading-relaxed" data-lang-target="rosemaryDesc">{translations.es.rosemaryDesc}</p>
        </article>

        <article class="group cursor-pointer">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-4 sm:mb-6 relative rounded-sm">
                <img src="https://www.bhg.com/thmb/oyZgdmciW-QLtFsz76lC8EF5n8Q=/750x0/filters:no_upscale():max_bytes(150000):strip_icc():format(webp)/german-chamomile-matricaria-recutita-9cfd85a6-6f6e48958c1346c9b06d30e2cb124df6.jpg" alt="Chamomile Mist" class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-3 sm:bottom-4 left-3 sm:left-4 right-3 sm:right-4 bg-white/90 py-2 sm:py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity rounded">Quick Add — $32</button>
            </div>
            <h3 class="text-lg sm:text-xl mb-1 leading-tight" data-lang-target="chamomileTitle">{translations.es.chamomileTitle}</h3>
            <p class="text-stone-500 text-xs sm:text-sm mb-4 leading-relaxed" data-lang-target="chamomileDesc">{translations.es.chamomileDesc}</p>
        </article>

        <article class="group cursor-pointer sm:col-span-2 lg:col-span-1">
            <div class="aspect-[4/5] bg-stone-100 overflow-hidden mb-4 sm:mb-6 relative rounded-sm">
                <img src="https://images.unsplash.com/photo-1608571423902-eed4a5ad8108?auto=format&fit=crop&q=80" alt="Botanic Balm" class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <button class="absolute bottom-3 sm:bottom-4 left-3 sm:left-4 right-3 sm:right-4 bg-white/90 py-2 sm:py-3 text-xs uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity rounded">Quick Add — $18</button>
            </div>
            <h3 class="text-lg sm:text-xl mb-1 leading-tight" data-lang-target="balmTitle">{translations.es.balmTitle}</h3>
            <p class="text-stone-500 text-xs sm:text-sm mb-4 leading-relaxed" data-lang-target="balmDesc">{translations.es.balmDesc}</p>
        </article>

    </div>
</section>
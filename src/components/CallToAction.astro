---
import { translations } from '../translations';
import { Image } from 'astro:assets';
import mindsetImage from '../assets/mindset.jpg';
---

<section id="call-to-action" class="bg-stone-100 py-16 sm:py-20 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-16 items-center">
            <div class="order-2 lg:order-1">
                <Image src={mindsetImage} alt="Natural wellness products" class="w-full h-64 sm:h-80 lg:h-96 object-cover rounded-sm shadow-sm">
            </div>
            <div class="order-1 lg:order-2 max-w-xl mx-auto lg:mx-0 text-center lg:text-left">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl mb-4 sm:mb-6 italic leading-tight" data-lang-target="callToActionTitle">{translations.es.callToActionTitle}</h2>
                <p class="text-stone-600 leading-relaxed mb-6 sm:mb-8 text-sm sm:text-base" data-lang-target="callToActionText">
                    {translations.es.callToActionText}
                </p>
                <a href="#shop" class="inline-block bg-[#4B5E45] text-white px-6 py-3 rounded-md hover:text-med-terracotta transition-colors">{translations.es.exploreCollection}</a>
            </div>
        </div>
    </div>
</section>
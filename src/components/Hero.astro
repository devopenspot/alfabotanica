---
import { translations } from '../translations';
---

<section class="relative h-[80vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
        <div class="w-full h-full bg-[url('https://images.unsplash.com/photo-1502472992487-44c11306443c?auto=format&fit=crop&q=80')] bg-cover bg-center opacity-40"></div>
    </div>
    <div class="relative z-10 text-center px-6">
        <span class="uppercase tracking-[0.3em] text-sm mb-4 block" data-lang-target="heroSubtitle">{translations.es.heroSubtitle}</span>
        <h1 class="text-5xl md:text-7xl mb-6" data-lang-target="heroTitle">{translations.es.heroTitle}</h1>
        <p class="max-w-md mx-auto mb-8 text-stone-600" data-lang-target="heroDescription">{translations.es.heroDescription}</p>
        <a href="#shop" class="inline-block bg-med-sage text-white px-10 py-4 uppercase tracking-widest text-xs hover:bg-stone-800 transition" data-lang-target="exploreCollection">{translations.es.exploreCollection}</a>
    </div>
</section>
---
import { translations } from '../translations';
---

<section id="philosophy" class="bg-stone-100 py-24">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-16 items-center">
        <div class="order-2 md:order-1">
            <img src="https://images.unsplash.com/photo-1515516089376-88db1e26e9c0?auto=format&fit=crop&q=80" alt="Botanical process" class="rounded-sm">
        </div>
        <div class="order-1 md:order-2">
            <h2 class="text-4xl mb-6 italic" data-lang-target="philosophyTitle">{translations.es.philosophyTitle}</h2>
            <p class="text-stone-600 leading-relaxed mb-6" data-lang-target="philosophyText">
                {translations.es.philosophyText}
            </p>
            <ul class="space-y-4">
                <li class="flex items-center text-sm uppercase tracking-widest"><span class="w-4 h-px bg-med-terracotta mr-3"></span> <span data-lang-target="organicCertified">{translations.es.organicCertified}</span></li>
                <li class="flex items-center text-sm uppercase tracking-widest"><span class="w-4 h-px bg-med-terracotta mr-3"></span> <span data-lang-target="plasticFree">{translations.es.plasticFree}</span></li>
                <li class="flex items-center text-sm uppercase tracking-widest"><span class="w-4 h-px bg-med-terracotta mr-3"></span> <span data-lang-target="veganCrueltyFree">{translations.es.veganCrueltyFree}</span></li>
            </ul>
        </div>
    </div>
</section>
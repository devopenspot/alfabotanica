---
import { translations } from '../translations';
---

<footer id="contact" class="bg-med-cream border-t border-med-clay pt-20 pb-10">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-20">
            <div class="col-span-1 md:col-span-2">
                <h3 class="text-2xl mb-6 italic" data-lang-target="gardenClub">{translations.es.gardenClub}</h3>
                <p class="text-stone-500 mb-6 max-w-sm text-sm" data-lang-target="gardenClubText">{translations.es.gardenClubText}</p>
                <form class="flex border-b border-stone-800 py-2">
                    <input type="email" data-lang-target="emailPlaceholder" placeholder="{translations.es.emailPlaceholder}" class="bg-transparent border-none outline-none flex-grow text-sm">
                    <button class="uppercase text-[10px] tracking-[0.2em]" data-lang-target="subscribe">{translations.es.subscribe}</button>
                </form>
            </div>
            <div>
                <h4 class="text-xs uppercase tracking-widest mb-6 font-bold">Shop</h4>
                <ul class="text-sm space-y-3 text-stone-600">
                    <li><a href="#" data-lang-target="bestSellers">{translations.es.bestSellers}</a></li>
                    <li><a href="#" data-lang-target="subscription">{translations.es.subscription}</a></li>
                    <li><a href="#" data-lang-target="gifting">{translations.es.gifting}</a></li>
                </ul>
            </div>
            <div>
                <h4 class="text-xs uppercase tracking-widest mb-6 font-bold">Inquiries</h4>
                <ul class="text-sm space-y-3 text-stone-600">
                    <li><a href="#" data-lang-target="shippingPolicy">{translations.es.shippingPolicy}</a></li>
                    <li><a href="#" data-lang-target="contactUs">{translations.es.contactUs}</a></li>
                    <li><a href="#" data-lang-target="stockists">{translations.es.stockists}</a></li>
                </ul>
            </div>
        </div>
        <div class="flex flex-col md:flex-row justify-between items-center text-[10px] uppercase tracking-widest text-stone-400">
            <p data-lang-target="copyright">{translations.es.copyright}</p>
            <div class="flex space-x-6 mt-4 md:mt-0">
                <a href="#" data-lang-target="instagram">{translations.es.instagram}</a>
                <a href="#" data-lang-target="pinterest">{translations.es.pinterest}</a>
            </div>
        </div>
    </div>
</footer>
---
import { translations } from '../translations';
---

<footer id="contact" class="bg-med-cream border-t border-med-clay pt-12 sm:pt-16 lg:pt-20 pb-8 sm:pb-10">
    <div class="container mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-10 lg:gap-12 mb-12 sm:mb-16 lg:mb-20">
            <div class="col-span-1 sm:col-span-2 lg:col-span-2">
                <h3 class="text-xl sm:text-2xl mb-4 sm:mb-6 italic leading-tight" data-lang-target="gardenClub">{translations.es.gardenClub}</h3>
                <p class="text-stone-500 mb-4 sm:mb-6 max-w-sm text-sm sm:text-base leading-relaxed" data-lang-target="gardenClubText">{translations.es.gardenClubText}</p>
                <form class="flex border-b border-stone-800 py-2">
                    <input type="email" data-lang-target="emailPlaceholder" placeholder="{translations.es.emailPlaceholder}" class="bg-transparent border-none outline-none flex-grow text-sm placeholder-stone-400 focus:placeholder-stone-300">
                    <button class="uppercase text-[10px] tracking-[0.2em] hover:text-med-terracotta transition-colors" data-lang-target="subscribe">{translations.es.subscribe}</button>
                </form>
            </div>
            <div class="mt-8 sm:mt-0">
                <h4 class="text-xs uppercase tracking-widest mb-4 sm:mb-6 font-bold text-stone-700">Shop</h4>
                <ul class="text-sm space-y-2 sm:space-y-3 text-stone-600">
                    <li><a href="#" class="text-green-700 hover:text-med-terracotta transition-colors" data-lang-target="bestSellers">{translations.es.bestSellers}</a></li>
                    <li><a href="#" class="text-green-700 hover:text-med-terracotta transition-colors" data-lang-target="subscription">{translations.es.subscription}</a></li>
                    <li><a href="#" class="text-green-700 hover:text-med-terracotta transition-colors" data-lang-target="gifting">{translations.es.gifting}</a></li>
                </ul>
            </div>
            <div class="mt-8 lg:mt-0">
                <h4 class="text-xs uppercase tracking-widest mb-4 sm:mb-6 font-bold text-stone-700">Inquiries</h4>
                <ul class="text-sm space-y-2 sm:space-y-3 text-stone-600">
                    <li><a href="#" class="text-green-700 hover:text-med-terracotta transition-colors" data-lang-target="shippingPolicy">{translations.es.shippingPolicy}</a></li>
                    <li><a href="#" class="text-green-700 hover:text-med-terracotta transition-colors" data-lang-target="contactUs">{translations.es.contactUs}</a></li>
                    <li><a href="#" class="text-green-700 hover:text-med-terracotta transition-colors" data-lang-target="stockists">{translations.es.stockists}</a></li>
                </ul>
            </div>
        </div>
        <div class="flex flex-col sm:flex-row justify-between items-center text-[10px] uppercase tracking-widest text-stone-400 border-t border-med-clay pt-6 sm:pt-8">
            <p class="mb-4 sm:mb-0" data-lang-target="copyright">{translations.es.copyright}</p>
            <div class="flex space-x-4 sm:space-x-6">
                <a href="#" class="text-green-700 hover:text-med-terracotta transition-colors" data-lang-target="instagram">{translations.es.instagram}</a>
                <a href="#" class="text-green-700 hover:text-med-terracotta transition-colors" data-lang-target="pinterest">{translations.es.pinterest}</a>
            </div>
        </div>
    </div>
</footer>
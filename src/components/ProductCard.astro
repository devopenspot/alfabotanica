---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import type { ImageMetadata } from 'astro';

const { product, image } = Astro.props as {
  product: CollectionEntry<'products'>;
  image: ImageMetadata;
};

const slug = product.filePath?.substring(product.filePath.lastIndexOf('/') + 1, product.filePath.lastIndexOf('.md'));
---

<section class="border border-stone-300 rounded-xl pb-4 shadow-md hover:scale-105 hover:shadow-xl transition-all duration-300">

    <div class="w-full flex flex-col items-center gap-4">

		<div class="w-full bg-[#F7F6E4] rounded-t-xl p-4 flex flex-col items-center">
			<h1 class="font-playfair text-[#4B5E45] text-5xl tracking-[0.4em] uppercase">
				{product.data.name}
			</h1>
			<span class="font-playfair text-[#4B5E45] text-xs tracking-[0.4em] uppercase mt-4">
				{product.data.title}
			</span>
		</div>

        <div class="flex flex-col items-center text-center">
            {product.data.benefits.map((benefit) => (
                <span class="font-playfair text-[#4B5E45] text-sm leading-relaxed">
                    {benefit}
                </span>
            ))}
        </div>

        <div class="flex flex-col items-center text-center">
            <h4 class="font-playfair font-bold text-[#576B51] text-lg" >
                Extracto de
            </h4>

            {product.data.extracts.map((extract, index) => (
                <h1 class={`font-playfair text-[#4B5E45] text-4xl uppercase tracking-[0.4rem] leading-none`}>
                    {extract}
                </h1>
            ))}

			<a href={`/products/${slug}`} class="mt-2 text-[#4B5E45] text-sm hover:text-med-terracotta transition">
				{"Ver mas"}
				<span class="icon-[emojione-v1--bouquet]"></span>
			</a>
			
        </div>


    </div>
</section>
---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import type { ImageMetadata } from 'astro';

const { product, image } = Astro.props as {
  product: CollectionEntry<'products'>;
  image: ImageMetadata;
};

const slug = product.filePath?.substring(product.filePath.lastIndexOf('/') + 1, product.filePath.lastIndexOf('.md'));
---

<article class="border border-stone-300 rounded-xl pb-6 shadow-md hover:shadow-xl transition-shadow duration-300">

    <div class="max-w-md w-full flex flex-col items-center gap-4">

		<a href={`/products/${slug}`} class="w-full">
			<div class="w-full bg-[#F7F6E4] rounded-t-xl p-6 flex flex-col items-center">
				<h1 class="font-playfair text-[#4B5E45] text-5xl tracking-[0.3em] uppercase ml-3">
					{product.data.name}
				</h1>
				<span class="font-playfair text-[#4B5E45] text-xs tracking-[0.4em] uppercase mt-4 ml-1">
					{product.data.title}
				</span>
			</div>
        </a>

        <div class="flex flex-col items-center text-center">
            {product.data.benefits.map((benefit) => (
                <p class="font-playfair text-stone-600 text-sm">
                    {benefit}
                </p>
            ))}
        </div>

        <div class="flex flex-col items-center text-center">
            <p class="font-playfair font-bold text-[#576B51] text-lg mb-2">
                Extracto de
            </p>

            {product.data.extracts.map((extract, index) => (
                <h2 class={`font-playfair text-[#4B5E45] text-5xl uppercase tracking-widest leading-none`}>
                    {extract}
                </h2>
            ))}
        </div>


    </div>
</article>